             x:Class="ICT13580071B.NavPage2"
             Title="Page 2"
             BackgroundColor="Gray">

    <StackLayout
        Orientation="Vertical"
        VerticalOptions="Center"
        Padding="30">

        <Button
            Text="Next"
            BackgroundColor="Black"
            x:Name="nextButton"/>

        <Button
            Text="Back"
            BackgroundColor="Silver"
